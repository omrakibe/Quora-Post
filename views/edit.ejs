<%- include("includes/head.ejs") %>
<body>
  <div id="heading">
    <h2>Edit your Post</h2>
  </div>
  <div class="post">
    <h2 class="user">ID:- @<%= posts.id %></h2>
    <h2 class="user">Username:- @<%= posts.username %></h2>
    <form method="post" action="/post/<%= posts.id %>?_method=patch">
      <textarea
        placeholder="edit your content"
        style="width: 500px; height: 100px"
        class="input"
        name="content"
      >
 <%= posts.content %> </textarea
      >
      <br />
      <button>Submit</button>
    </form>
    <br />
    <a href="http://localhost:1100/post" class="backbtn">Go Back</a>
  </div>
</body>
